public class exercicio 11 {
    public static void main (String[] args) {
        // Definição dos três lados
        double lado1 = 5;
        double lado2 = 5;
        double lado3 = 5;

        // Antes de classificar, é importante verificar se os lados formam um triângulo válido
        if (lado1 + lado2 > lado3 && lado1 + lado3 > lado2 && lado2 + lado3 > lado1) {
            
            // Classificação do triângulo
            if (lado1 == lado2 && lado2 == lado3) {
                System.out.println("Triângulo Equilátero");
            } else if (lado1 == lado2 || lado1 == lado3 || lado2 == lado3) {
                System.out.println("Triângulo Isósceles");
            } else {
                System.out.println("Triângulo Escaleno");
            }
            
        } else {
            System.out.println("Os valores fornecidos não formam um triângulo válido.");
        }
    }
}
